<!-- style -->
<style>
    form label,
    input {
        display: block;
    }

    form input,
    select {
        padding: 10px;
        width: 50%;
        border-radius: 10px;
        border: 1px solid black;
        margin-bottom: 10px;
    }

    form select {
        margin-bottom: 10px;
    }

    form button {
        padding: 10px;
        border-radius: 10px;
        border: 1px solid black;
    }
</style>

<!-- header part -->
<div class="container-fluid" style="background-color: red;">
    <div class="row">
        <%- include('header.ejs') %>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-3">
            <%- include('left-menu.ejs') %>
        </div>
        <div class="col-9">
            <form method="post" enctype="multipart/form-data">
               
                <label for="hotel_name">User Name</label>
                <input type="text" name="name" placeholder=" name" value="<%= updateData.name %>">

               
                <label for="hotel_id">Last Name</label> 
                <input type="text" name="l_name" placeholder="name" value="<%= updateData.l_name %>">

                
                <label for="pirce">Hotel Price</label>
                <input type="text" name="hotel" placeholder=" Price" value="<%= updateData.hotel %>">

                <label for="file">CHOOSE</label>
                <input type="file" style="border: none;" name="image" value="<%= updateData.image %>">

                

                <!-- submit button  -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
